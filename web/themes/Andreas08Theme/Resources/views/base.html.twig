<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ lang() }}" dir="{{ langdirection() }}">
    <head>
        {% block head %}
        <meta http-equiv="Content-Type" content="text/html; charset={charset}" />
        <title>{{ pagegetvar('title') }}</title>
        <meta name="description" content="{{ metatags.description }}" />
        <meta name="keywords" content="{{ metatags.keywords }}" />
        <meta http-equiv="X-UA-Compatible" content="chrome=1" />
        {{ pageaddvar("stylesheet", "$stylepath/fluid960gs/reset.css") }}
        {{ pageaddvar("stylesheet", "$stylepath/fluid960gs/$layout.css") }}
        {{ pageaddvar("stylesheet", "$stylepath/style.css") }}
        {#{#% browserhack condition="if IE 7" assign="ieconditional" %#}#}
        {#<link rel="stylesheet" type="text/css" href="{{ stylepath }}/fluid960gs/ie.css" media="screen" />#}
        {#{/browserhack}#}
        {#{{ pageaddvar('header', ieconditional }}#}
        {% endblock %}
    </head>
    <body>
        <div id="theme_page_container" class="container_16">
            <div id="theme_header">
                <h1 class="title"><a href="{#{ homepage() }#}">{{ modvars.ZConfig.sitename }}</a></h1>
                <h2 class="slogan">{{ modvars.ZConfig.slogan }}</h2>
            </div>
            <div id="theme_contents>{% block contents %}{% endblock %}</div>
            <div id="theme_footer">
                {% block footer %}
                <p>{{ __('Powered by') }} <a href="http://zikula.org">Zikula</a></p>
                {% endblock %}
            </div>
        </div>
    </body>
</html>